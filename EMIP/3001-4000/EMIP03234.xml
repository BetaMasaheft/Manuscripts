               <msContents>
                  <summary/>
                  <msItem xml:id="ms_i1">
                    <locus from="4r" to="172v" facs="004"/>
                    <title type="complete" ref="LIT2701Dawit"/>
                    <textLang mainLang="gez">Gǝ'ǝz</textLang>

                  <msItem xml:id="ms_i1.1"><locus from="4r" to="135v" facs="004"/><title type="complete" ref="LIT2000Mazmur"/>
                  <note><ref type="work" corresp="LIT2000Mazmur#Ps118Spiritual"/> is the simple modern one</note>
                  <note><ref type="work" corresp="LIT2000Mazmur#Ps151"/> contains only the plus of <q><foreign xml:lang="gez">ወአድኃነኒ</foreign></q> of the longer version;
                  everything else is the short version</note>
                </msItem>
                  <msItem xml:id="ms_i1.2"><locus from="136r" to="149v" facs="136"/><title type="complete" ref= "LIT1828Mahale"/>
                  <note><ref type="work" corresp="LIT2257salota#Hannah"/> is designated as Prayer of Hana, mother of Samuel, prophet</note>
                </msItem>
                  <msItem xml:id="ms_i1.3"><locus from="150r" to="156v" facs="150"/><title type="complete" ref="LIT2362Songof"/>
                  <note>common version</note>
                </msItem>
                  <msItem xml:id="ms_i1.4"><locus from="157r" to="167v" facs="157"/><title type="complete" ref="LIT2509Weddas"/>
                  <note>arranged for the days of the week, laid out beginning on Monday and culminating on Sunday</note>
                </msItem>
                  <msItem xml:id="ms_i1.5"><locus from="167v" to="172v" facs="168"/><title type="complete" ref="LIT1113Anqasa"/>
                </msItem>
              </msItem>
               </msContents>
               <physDesc>
                  <objectDesc form="Codex">
                     <supportDesc>

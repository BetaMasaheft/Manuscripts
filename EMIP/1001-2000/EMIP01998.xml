                     <locus from="1r" to="148r"/>
                     <title type="complete" ref="LIT2701Dawit"/>
                     <textLang mainLang="gez">Gə‘əz</textLang>
                  </msItem>
                  <msItem xml:id="ms_i2">
                     <locus from="148r" to="149v"/>
                     <title type="complete" ref="LIT3108RepCh388"/>
                     <textLang mainLang="gez">Gə‘əz</textLang>
                     <note>in a different and later hand</note>
                  </msItem>

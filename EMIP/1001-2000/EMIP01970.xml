                  <decoDesc>
                  <decoNote type="frame" xml:id="d01">
                    Decorative designs:
                    <locus target="#1r #7r #13v #20v #30r #36r #41r #48v #58v #66r #71r #82v #93v #96r #101v #107v #119r #126r"/> (haräg);

                    <locus from="1r" to="58r" facs="001"/>
                    <title type="incomplete" ref="LIT5938CommAmmestu"/>
                      <textLang mainLang="am" otherLangs="gez">Amharic and Gǝ‘ǝz</textLang>
                      <note>incomplete at the beginning</note>
                      <msItem xml:id="ms_i1.1"><locus from="1r" to="8r" facs="001"/><title type="incomplete" ref="LIT5965CommBapt"/>
                        <note>incomplete at the beginning</note>

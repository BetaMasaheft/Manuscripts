                                      <decoNote type="miniature" xml:id="d1"><locus target="#iv(erso)" facs="003"> f. iv(erso) upper left</locus><desc><ref type ="authFile" corresp="AT1002Annunciation"/></desc></decoNote>
                                      <decoNote type="miniature" xml:id="d2"><locus target="#iv(erso)" facs="003"> f. iv(erso) upper right</locus><desc><ref type="authFile" corresp ="AT1099StMary"/> and <persName ref="PRS3725Elizabet"/></desc></decoNote>

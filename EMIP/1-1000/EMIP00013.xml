                    <decoNote type="miniature" xml:id="d01">
                        <locus target="#ir"/>
                        <desc>
                        Crude drawing of human-like figure
                        </desc>
                        </decoNote>
                      <decoNote type="miniature" xml:id="d02">
                        <locus target="#iir"/>
                        <desc>
                          Crude drawing of human and flower/<term key="cross"/>
                          </desc>
                        </decoNote>
                      <decoNote type="miniature" xml:id="d03">
                        <locus target="#iiv(erso)"/>
                        <desc>
                          Crude drawing of faces peering from behind long slim items
                          </desc>
                          </decoNote>
                      <decoNote type="miniature" xml:id="d04">
                        <locus target="#79v"/>
                        <desc>
                          Crude drawing of face peering from behind a small horse-like animal
                          </desc>
                          </decoNote>
                      <decoNote type="miniature" xml:id="d05">
                        <locus target="#80v"/>

               <msContents>
                  <summary>Psalter, ዳዊት፡</summary>
                  <msItem xml:id="ms_i1">
                     <locus from="1r" to="167v"/>
                     <title type="complete" ref="LIT2701Dawit"/>
                     <textLang mainLang="gez">Gə‘əz</textLang>
                  </msItem>
               </msContents>
               <physDesc>
                  <objectDesc form="Codex">
                     <supportDesc>
                        <support>

                                <item xml:id="a2">
                                    <locus from="83v" to="86r"/>
                                    <desc type="GuestText"><title ref="LIT7310PPSewware" type="complete"/>, written by a third hand on leaves
                                        originally left empty.</desc>
                                    <q xml:lang="gez">
                                        <seg part="I">በስመ፡ <gap reason="ellipsis"/>

          <msContents>
            <summary>Magic Scroll</summary>
            <msItem xml:id="ms_i1">
              <locus from="1ra1" to="1ra27" facs="001"/>
              <title type="complete" ref="LIT5888AsmatPrayer"> against demons, headache, tremors,
                back pain, etc.</title>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>
            <msItem xml:id="ms_i2">
              <locus from="1ra27" to="1rb26" facs="001"/>
              <title type="complete" ref="LIT5888AsmatPrayer"> against the evil eye of Barya, the
                binding of demons, which was spoken to Alexander the Great</title>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>
            <msItem xml:id="ms_i3">
              <locus from="1rb26" to="1rb57" facs="002"/>
              <title type="complete" ref="LIT5888AsmatPrayer"> against the evil eye of Barya, the
                binding of demons, which Alexander spoke at Gog and Magog</title>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>
            <msItem xml:id="ms_i4">
              <locus from="1ra60" to="1ra89" facs="003"/>
              <title type="complete" ref="LIT5888AsmatPrayer"> against the evil eye with the story
                of Jesus and the disciples at the Sea of Tiberias, Ṣälota Nǝdra, <foreign
                  xml:lang="gez">ጸሎተ ንድራ</foreign></title>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>
            <msItem xml:id="ms_i5">
              <locus from="1ra89" to="1rb97" facs="004"/>
              <title type="complete" ref="LIT5888AsmatPrayer"> against charm, <foreign
                  xml:lang="gez">ጸሎት በእንተ መፍትሔ ሥራይ</foreign></title>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>
            <msItem xml:id="ms_i6">
              <locus from="1ra98" to="1rb154" facs="005"/>
              <title type="complete" ref="LIT5888AsmatPrayer"> of St. Susǝnyos and the story of his
                fight against Wǝrzǝlya, demon of infant mortality</title>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>
            <msItem xml:id="ms_i7">
              <locus from="1rb132" to="1rb154" facs="006"/>
              <title type="incomplete" ref="LIT5696MagicPrayer"/>
              <note>The starting point of this excerpt is not clear</note>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>
            <msItem xml:id="ms_i8">
              <locus from="1ra155" to="10rb169" facs="008"/>
              <title>Prayer of Blessing of Saint Susǝnyos</title>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>
            <msItem xml:id="ms_i9">
              <locus from="1rb170" to="1rb209" facs="009"/>
              <title type="complete" ref="LIT5888AsmatPrayer"> invoking the Gospel of John
                1:1-4</title>
              <textLang mainLang="gez">Gǝ'ǝz</textLang>
            </msItem>

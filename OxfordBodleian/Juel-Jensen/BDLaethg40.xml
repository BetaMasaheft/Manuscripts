                                <persName ref="PRS13860HawituA" role="owner"><hi rend="rubric">ሓዊቱ</hi></persName>
                                <persName ref="PRS13861WalattaH" role="owner"><hi rend="rubric"><add place="interlinear">ወለተ፡ ሕይወት</add></hi></persName></incipit>

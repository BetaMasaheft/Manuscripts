                                        <title ref="LIT1097Ammest#Eucharist" type="complete"/> begins on <locus target="#23r"/>;
                                        <title ref="LIT1097Ammest#Resurrection" type="complete"/> begins on <locus target="#25v"/>.
                                    </desc>
                                    <q xml:lang="am"/>
                                </item>
                                
                                <item xml:id="e2">
